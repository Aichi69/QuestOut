<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <!-- Back Arrow -->
    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_back" />

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/backBtn"
        android:layout_alignTop="@id/backBtn"
        android:text="DAILY QUEST"
        android:textColor="#FFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginStart="12dp" />

    <!-- Congratulation Banner -->
    <LinearLayout
        android:id="@+id/congratsBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_white_bg"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_dumbbell" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONGRATULATION ON COMPLETING TODAY'S QUEST"
            android:textColor="#888"
            android:textSize="16sp"
            android:layout_marginStart="12dp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Illustration -->
    <ImageView
        android:id="@+id/questCompleteImage"
        android:layout_width="220dp"
        android:layout_height="180dp"
        android:layout_below="@id/congratsBanner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_weightlifter" />

    <!-- XP Card/Container -->
    <LinearLayout
        android:id="@+id/xpCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/questCompleteImage"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rounded_white_bg"
        android:orientation="vertical"
        android:padding="24dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You've earned"
            android:textColor="#8F6ED5"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/xpTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50 XP"
            android:textColor="#8F6ED5"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Go to Home Button -->
    <Button
        android:id="@+id/claimButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="32dp"
        android:text="CLAIM"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:backgroundTint="#FF5E9C"
        android:background="@drawable/rounded_button_pink" />

</RelativeLayout> 